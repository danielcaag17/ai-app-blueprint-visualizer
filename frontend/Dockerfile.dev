# ===============================
# Frontend Development Image
# ===============================
FROM node:22

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar solo package.json y pnpm-lock.yaml para caché
COPY package*.json ./

# Instalar dependencias
RUN pnpm install

# Copiar el resto del código
COPY . .

# Exponer el puerto de Vite (5173 por defecto)
EXPOSE 5173

# Ejecutar Vite en modo desarrollo con hot reload
CMD ["pnpm", "run", "dev", "--host", "0.0.0.0"]
